{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false
  },
  "include": ["src"]
}
